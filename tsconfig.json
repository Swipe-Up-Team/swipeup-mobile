{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@themes/*": ["src/themes/*"],
      "@config/*": ["src/config/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"],
      "@assets/*": ["assets/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
